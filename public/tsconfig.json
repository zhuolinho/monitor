{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "compileOnSave": true,
  "browserRefreshOnSave": true,
  "atom": {
    "rewriteTsconfig": true
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "dist",
    "mobile",
    "typings/main",
    "typings/main.d.ts"
  ],
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ]
}
