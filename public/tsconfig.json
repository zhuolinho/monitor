{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ],
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ],
  "compileOnSave": true,
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "app/boot.ts",
    "app/components/gps/gps.component.ts",
    "app/components/home/alerts_processed/home.alerts.processed.component.ts",
    "app/components/home/alerts/home.alerts.component.ts",
    "app/components/home/home.component.ts",
    "app/components/main.component.ts",
    "app/components/Monitor/monitor.component.ts",
    "app/config.ts",
    "app/layout_components/action/action.ts",
    "app/layout_components/footer/footer.ts",
    "app/layout_components/header/header.ts",
    "app/layout_components/navigator/navigator.ts",
    "app/layout_components/sidebar/sidebar.ts",
    "app/services/request.ts",
    "app/services/router.ts",
    "typings/browser.d.ts",
    "typings/browser/ambient/es6-shim/index.d.ts",
    "typings/browser/ambient/jasmine/index.d.ts"
  ]
}
